@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Web
@using BlazorBootstrap

<div class="page d-flex">
    <div>

        <Collapse @ref="sidebarCollapse" Toggle="@sidebarVisible" Horizontal="true">
            <div class="sidebar">
                <NavMenu />
            </div>
        </Collapse>
    </div>

    <main class="flex-grow-1">
        <div class="top-row px-4">
            <div class="d-flex justify-content-between align-items-center w-100">
                <div class="d-flex align-items-center float-start me-3">
                    <Button Color="ButtonColor.Primary" class="me-2" @onclick="ToggleSidebar">
                        <span class="bi bi-list"></span> Menu
                    </Button>
                    <ThemeSwitcher Position="DropdownMenuPosition.Start" />
                </div>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
                <img src="/images/maersk-logo.png" alt="Maersk" class="maersk-logo" />
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private Collapse? sidebarCollapse;
    private bool sidebarVisible = true;

    private async Task ToggleSidebar()
    {
        sidebarVisible = !sidebarVisible;
        await sidebarCollapse!.ToggleAsync();
    }
}

<style>
    .maersk-logo {
        height: 40px;
        width: auto;
        object-fit: contain;
        margin-left: 1rem;
    }

    .top-row {
        background-color: #f7f7f7;
        border-bottom: 1px solid #d6d5d5;
        justify-content: flex-end;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .page {
        display: flex;
        flex-direction: row;
        min-height: 100vh;
    }

    .sidebar {
        min-width: 220px;
        max-width: 300px;
        background: #fff;
        border-right: 1px solid #e0e0e0;
        min-height: 100vh;
        transition: width 0.3s;
    }
</style>
